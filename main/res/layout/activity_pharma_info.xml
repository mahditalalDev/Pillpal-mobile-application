<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Text View -->
    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Fill the info about your pharma"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    <!-- Pharma Name Edit Text -->
    <EditText
        android:id="@+id/pharmaNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoTextView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Pharma Name"
        android:textColorHint="#808080"
        android:textColor="#000000"
        android:inputType="text"
        android:background="#F2F2F2"/>

    <!-- Place Edit Text -->
    <EditText
        android:id="@+id/placeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pharmaNameEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Place"
        android:textColorHint="#808080"
        android:textColor="#000000"
        android:inputType="text"
        android:background="#F2F2F2"/>

    <!-- Phone Number Edit Text -->
    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Phone Number"
        android:textColorHint="#808080"
        android:textColor="#000000"
        android:inputType="phone"
        android:background="#F2F2F2"/>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneNumber"
        android:layout_marginTop="16dp"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:background="#1E90FF"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>